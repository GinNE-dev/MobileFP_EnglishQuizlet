<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_topic_null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:gravity="center">
        </TextView>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:src="@drawable/statistics_graph_stats_analytics_business_data_svgrepo_com">

        </androidx.appcompat.widget.AppCompatImageButton>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Score:"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Correct:"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Incorrect:"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Feedback:"
                        android:fontFamily="@font/baloo"
                        android:textSize="22dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông minh dữ ta"
                        android:fontFamily="@font/baloo"
                        android:textSize="16dp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Restart Test"
            android:fontFamily="@font/baloo"
            android:textSize="18dp"
            android:textColor="#375287"
            android:backgroundTint="@color/white"
            app:strokeColor="#375287"
            app:strokeWidth="2dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="New Test"
            android:fontFamily="@font/baloo"
            android:textSize="18dp"
            android:textColor="#375287"
            android:backgroundTint="@color/white"
            app:strokeColor="#375287"
            app:strokeWidth="2dp">

        </com.google.android.material.button.MaterialButton>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>