<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_topic_null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:gravity="center">
        </TextView>

<!--        <androidx.appcompat.widget.AppCompatImageButton-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:background="?attr/selectableItemBackground"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_gravity="right"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/statistics_graph_stats_analytics_business_data_svgrepo_com">-->

<!--        </androidx.appcompat.widget.AppCompatImageButton>-->

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Score:"
                        android:fontFamily="@font/baloo"
                        android:textSize="18dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:id="@+id/text_view_score"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/baloo"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Correct:"
                        android:fontFamily="@font/baloo"
                        android:textSize="18dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:id="@+id/text_view_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/baloo"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Incorrect:"
                        android:fontFamily="@font/baloo"
                        android:textSize="18dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:id="@+id/text_view_incorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/baloo"
                        android:textSize="20dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Feedback:"
                        android:fontFamily="@font/baloo"
                        android:textSize="18dp"
                        android:textColor="#375287">

                    </TextView>
                    <TextView
                        android:id="@+id/text_view_feedback"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông minh dữ ta"
                        android:fontFamily="@font/baloo"
                        android:textSize="16dp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">
            </View>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/baloo"
                android:text="Correct"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/baloo"
                android:text="Incorrect"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_correct_words"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_incorrect_words"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"

                android:layout_gravity="center_horizontal"
                tools:ignore="ExtraText">>
            </androidx.recyclerview.widget.RecyclerView>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_restart_test"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Restart Test"
                android:fontFamily="@font/baloo"
                android:textSize="18dp"
                android:textColor="#375287"
                android:backgroundTint="@color/white"
                app:strokeColor="#375287"
                app:strokeWidth="2dp">

            </com.google.android.material.button.MaterialButton>
            <View
                android:layout_width="20dp"
                android:layout_height="0dp">

            </View>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_new_test"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="New Test"
                android:fontFamily="@font/baloo"
                android:textSize="18dp"
                android:textColor="#375287"
                android:backgroundTint="@color/white"
                app:strokeColor="#375287"
                app:strokeWidth="2dp">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>