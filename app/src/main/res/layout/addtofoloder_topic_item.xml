<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_mytopic"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Topic"
                    android:textSize="20dp"
                    android:fontFamily="@font/baloo">

                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <TextView
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2 terms"
                        android:textColor="@color/white"
                        android:background="#330867"
                        android:fontFamily="@font/baloo">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        app:civ_border_color="#00F8FF"
                        app:civ_border_width="1dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/logo">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ngtiendat242002"
                        android:gravity="center"
                        android:fontFamily="@font/baloo">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1">
            </View>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/baloo"
                android:backgroundTint="#dce8fc"
                android:textColor="#375287"
                app:strokeWidth="2dp"
                app:strokeColor="#375287">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>