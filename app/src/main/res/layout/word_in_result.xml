<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginVertical="5dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#375287"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
<!--                <TextView-->
<!--                    android:alpha="0.8"-->
<!--                    android:paddingLeft="5dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Term:"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="14dp"-->
<!--                    android:fontFamily="@font/baloo">-->
<!--                </TextView>-->
                <TextView
                    android:gravity="center"
                    android:id="@+id/text_view_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:fontFamily="@font/baloo">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<!--                <TextView-->
<!--                    android:alpha="0.8"-->
<!--                    android:paddingLeft="5dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Definition:"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="14dp"-->
<!--                    android:fontFamily="@font/baloo">-->
<!--                </TextView>-->
                <TextView
                    android:id="@+id/text_view_definition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tiếng Anh"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/baloo">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your answer"
                    android:textColor="#F9F871"
                    android:textSize="14dp"
                    android:fontFamily="@font/baloo"
                    android:textAlignment="center">
                </TextView>
                <TextView
                    android:id="@+id/text_view_your_answer"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tiếng Pháp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/baloo">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/image_button_sound"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/sound_white">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>